{
	"name": "entwine",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.3",
			"zod": "^4.3.6",
			"arktype": "^2.1.29",
			"typescript": "^5.9.3",
			"@types/bun": "^1.3.8",
			"hono": "^4.11.7",
			"better-auth": "^1.4.18",
			"@typescript/native-preview": "^7.0.0-dev.20260201.1",
			"@tanstack/react-query": "^5.90.20",
			"drizzle-orm": "^0.45.1"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"build:types": "turbo -F @entwine/server build:types",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F @entwine/server dev",
		"db:push": "turbo -F @entwine/server db:push",
		"db:studio": "turbo -F @entwine/server db:studio",
		"db:generate": "turbo -F @entwine/server db:generate",
		"db:migrate": "turbo -F @entwine/server db:migrate",
		"db:local": "turbo -F @entwine/server db:local",
		"check": "biome check --write .",
		"clean": "find . -type d -name 'node_modules' -exec rm -rf {} +"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@entwine/config": "workspace:*",
		"@types/bun": "catalog:",
		"turbo": "^2.8.1",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.3.6"
}
